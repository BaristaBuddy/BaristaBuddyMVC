@{
    ViewData["Title"] = "Barista Buddy Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaristaBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="~/css/site.css" />-->
    <link rel="stylesheet" href="~/css/base.css" />
</head>
<body>
    <main class="index-container">
        <div class="text-center animated fadeIn">
            <a asp-action="Index"
               asp-controller="Stores"><img alt="Barista Buddy logo" src="..\img\barista-buddy-index.png" /></a>
        </div>
    </main>
    <footer class="footer text-muted brand-color">
        <div class="container">
            &copy; 2020 - BaristaBuddy - <a asp-area="" asp-controller="Home" asp-action="License">License</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
