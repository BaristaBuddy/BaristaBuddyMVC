@model BaristaBuddyMVC.Models.Store

@{
    ViewData["Title"] = "Your Store Details";
}

<h1>Your Store Details</h1>

<div>
    <h4>Your Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WebsiteUrl)
        </dt>
        <dd class="col-sm-10 border-left">
            <a href="@Html.DisplayFor(model => model.WebsiteUrl)">@Html.DisplayFor(model => model.WebsiteUrl)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreImageUrl)
        </dt>
        <dd class="col-sm-10 border-left">
            @Html.DisplayFor(model => model.StoreImageUrl)
        </dd>
    </dl>
</div>
<div class="card-body" style="margin:5px;">
    <a class="btn btn-lg btn-outline-primary"
       asp-action="Index"
       asp-controller="Items"
       asp-route-storeId="@Model.Id">
        Menu
    </a>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Model.Id }) |
    <a asp-action="Index">Return to List</a>
</div>
